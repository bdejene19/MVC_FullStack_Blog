<header>
    <title>Edits</title>
    <link href="/css/editPage.css" rel="stylesheet"/>
</header>

<section class="edit-post-container" id="{{userId}}">


    <h1 style="flex-basis: 100%;">Edit post #{{postId}}</i></h1>
    <form>  
        <label for="post-title">
            Title:
        </label>
        <input type="text" id="title" placeholder="Intermediate React Guide" value="{{newTitle}}"/>
        <label for="new-post">
            Blog Body:
        </label>
        <textarea type="textarea" id="content">{{oldContent}}</textarea>

        <button type="submit" id="create-post">Submit Edits</button>
    </form>
</section>