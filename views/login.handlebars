<head>
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="/css/login.css" >
</head>
<section class="login">
    <article>
        <h2>Sign In</h2>
        <form>
            <label for="signin-email">Email:</label>
            <input type="text" id="signin-email" placeholder="john123@gmail.com"/>

            <label for="username">Password:</label>
            <input type="password" id='password'/>
            <button id="sign-in">Sign-In</button>
        </form>
    </article>
    <article>
         <h2>Sign Up</h2>
        <form>
            <label for="name">Name:</label>
            <input type="text" id="name" placeholder="John Doe"/>

            <label for="newUsername">Username:</label>
            <input type="text" id="newUsername" placeholder="john123"/>

            <label for="email">Email:</label>
            <input type="text" id="email" placeholder="john123@gmail.com"/>

            <label for="newPswd">Password:</label>
            <input type="password" id='newPswd'/>
            <label for="newPswd">Repeat Password:</label>
            <input type="password" id='repeatPswd'/>
            
            <button id="sign-up">Sign-Up</button>

        
        </form>
    </article>
</section>
<script src="js/login.js"></script>